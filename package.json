{
  "name": "install-local",
  "version": "1.0.0",
  "description": "A small module for installing local packages. Works for both npm >= 5 and older versions.",
  "main": "src/index.js",
  "typings": "src/index.d.ts",
  "scripts": {
    "prebuild": "rimraf src/**/*.js src/**/*.map src/**/*.d.ts test/**/*.js test/**/*.map test/**/*.d.ts",
    "build": "tsc -p .",
    "postbuild": "tslint -p .",
    "pretest": "npm run build",
    "test": "mocha --timeout 30000 test/**/*.js",
    "posttest": "stryker run",
    "start": "tsc -w",
    "preversion": "npm t",
    "version": "conventional-changelog -p angular -i CHANGELOG.md -s && git add CHANGELOG.md",
    "postversion": "npm publish && git push && git push --tags",
    "release:patch": "npm version patch -m \"chore(release): %s\"",
    "release:minor": "npm version minor -m \"chore(release): %s\"",
    "release:major": "npm version major -m \"chore(release): %s\""
  },
  "bin": {
    "install-local": "bin/install-local"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nicojs/node-install-local.git"
  },
  "keywords": [
    "npm",
    "install",
    "local",
    "yarn"
  ],
  "author": "Nico Jansen <jansennico@gmail.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/nicojs/node-install-local/issues"
  },
  "homepage": "https://github.com/nicojs/node-install-local#readme",
  "devDependencies": {
    "@stryker-mutator/core": "^2.0.0",
    "@stryker-mutator/html-reporter": "^2.0.0",
    "@stryker-mutator/mocha-framework": "^2.0.0",
    "@stryker-mutator/mocha-runner": "^2.0.0",
    "@stryker-mutator/typescript": "^2.0.0",
    "@types/chai": "^4.1.7",
    "@types/chai-as-promised": "7.1.0",
    "@types/lodash": "^4.14.135",
    "@types/mocha": "^5.2.7",
    "@types/mz": "0.0.32",
    "@types/node": "^12.0.10",
    "@types/rimraf": "^2.0.2",
    "@types/semver": "^6.0.1",
    "@types/sinon": "^7.0.13",
    "@types/sinon-chai": "^3.2.2",
    "@types/uniqid": "^4.1.3",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "conventional-changelog-cli": "^2.0.21",
    "mocha": "^6.1.4",
    "semver": "^6.2.0",
    "sinon": "^7.3.2",
    "sinon-chai": "^3.3.0",
    "source-map-support": "^0.5.12",
    "tslint": "^5.18.0",
    "typescript": "^3.5.2"
  },
  "dependencies": {
    "lodash": "^4.17.11",
    "mz": "^2.7.0",
    "rimraf": "^2.6.3",
    "uniqid": "^5.0.3"
  }
}
