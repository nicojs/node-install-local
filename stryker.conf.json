{
  "$schema": "./node_modules/@stryker-mutator/core/schema/stryker-schema.json",
  "mutator": "typescript",
  "transpilers": [
    "typescript"
  ],
  "testRunner": "mocha",
  "reporters": [
    "html",
    "progress",
    "dashboard"
  ],
  "testFramework": "mocha",
  "mochaOptions": {
    "spec": [
      "test/helpers/**/*.js",
      "test/unit/**/*.js"
    ]
  },
  "coverageAnalysis": "perTest",
  "thresholds": {
    "high": 90,
    "low": 85,
    "break": 72
  }
}